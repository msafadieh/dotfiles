#! /bin/sh
if pidof mpv > /dev/null;
then
    killall mpv
    killall caffeinated
else
    modes="chill\nstudy"
    mode=$(printf "$modes" | dmenu)

    if [ "$mode" = "chill" ]; then
        url="https://www.youtube.com/watch?v=EcEMX-63PKY"
    else
        url="https://www.youtube.com/watch?v=hHW1oY26kxQ"
    fi
    caffeinated -p .cache/caffeinated &
    mpv --no-video --no-terminal "$url"
fi
